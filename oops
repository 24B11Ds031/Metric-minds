#include <stdio.h>
#include <string.h>

// Define the "Person" struct (like a class)
typedef struct {
    char name[50];
    int age;

    // Function pointer to simulate a method
    void (*display)(struct Person*);
} Person;

// Method to display the person details
void displayPerson(Person* p) {
    printf("Name: %s\n", p->name);
    printf("Age: %d\n", p->age);
}

// Constructor-like function to create a Person object
Person createPerson(const char* name, int age) {
    Person p;
    strcpy(p.name, name);
    p.age = age;
    p.display = displayPerson;  // Assign method pointer
    return p;
}

int main() {
    // Create a person object
    Person p1 = createPerson("Alice", 28);

    // Call the display method
    p1.display(&p1);

    return 0;
}
