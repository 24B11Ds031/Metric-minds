#include <iostream>
using namespace std;

int findMax(int arr[], int n) {
    int maxElement = arr[0]; // Initialize max with first element
    for (int i = 1; i < n; i++) {
        if (arr[i] > maxElement) {
            maxElement = arr[i];  // Update maxElement if current element is greater
        }
    }
    return maxElement;
}

int main() {
    int n;
    cout << "Enter size of array: ";
    cin >> n;

    int arr[n];
    cout << "Enter elements of array:\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int maxValue = findMax(arr, n);
    cout << "Maximum element in the array is: " << maxValue << endl;

    return 0;
}
